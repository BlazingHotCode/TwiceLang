// TODO 2-5 demo: more types, typed declarations, inference, and typeof/casts
let s: string = "hello";
let c = 'A';
let f = 3.14;
let n: string; // typed declaration without initializer => null

print(s);
print(c);
print(f);
print(n); // null

print(typeof(s));
print(typeof(c));
print(typeof(f));
print(typeof(n));

print(int(true));
print(bool(0));
print(char(66));

// New `+` behavior demos:
let greeting = "Hello, " + "Twice!";
print(greeting);

let n1 = 1 + 2.5;
let n2 = 6 - 2.5;
let n3 = 3 * 2.0;
let n4 = 7 / 2.0;
print(n1);
print(n2);
print(n3);
print(n4);

// modulo (`%`) and modulo assignment (`%=`)
let mod_i = 7 % 4;
print(mod_i);
let mod_f = 7.5 % 2.0;
print(mod_f);
let mod_assign = 9;
mod_assign %= 4;
print(mod_assign);

// compound assignments and increment/decrement
let acc = 10;
acc += 2;
acc -= 1;
acc *= 3;
acc /= 11;
print(acc);

let i = 3;
i++;
print(i);
i--;
print(i);

// char + char => char (sum of ASCII/codepoint values)
let char_sum = 'A' + '1';
print(char_sum);
let char_next = 'A' + 1;
print(char_next);

// string + int/float/char => string
print("x:" + 7);
print("x:" + 3.5);
print("x:" + 'A');

// boolean operators: &&, ||, ^^
print(true && false);
print(true || false);
print(true ^^ false);

// bitwise operators: &, |, ^, <<, >>
print(5 & 3);
print(5 | 2);
print(5 ^ 1);
print(5 << 1);
print(5 >> 1);

// function syntax demo
fn add(a: int, b: int = 2) int {
  return a + b;
}

print(add(3));             // positional + default => 5
print(add(a = 3, b = 4));  // named args => 7
print(add(3, b = 10));     // mixed positional + named => 13
