// TODO 2-5 demo: more types, typed declarations, inference, and typeof/casts
let s: string = "hello";
let c = 'A';
let f = 3.14;
let n: string; // typed declaration without initializer => null

print(s);
print(c);
print(f);
print(n); // null

print(typeof(s));
print(typeof(c));
print(typeof(f));
print(typeof(n));

print(int(true));
print(bool(0));
print(char(66));

// New `+` behavior demos:
let greeting = "Hello, " + "Twice!";
print(greeting);

let n1 = 1 + 2.5;
let n2 = 6 - 2.5;
let n3 = 3 * 2.0;
let n4 = 7 / 2.0;
print(n1);
print(n2);
print(n3);
print(n4);

// char + char => char (sum of ASCII/codepoint values)
let char_sum = 'A' + '1';
print(char_sum);
let char_next = 'A' + 1;
print(char_next);

// string + int/float/char => string
print("x:" + 7);
print("x:" + 3.5);
print("x:" + 'A');

// boolean operators: &&, ||, ^^
print(true && false);
print(true || false);
print(true ^^ false);

// bitwise operators: &, |, ^, <<, >>
print(5 & 3);
print(5 | 2);
print(5 ^ 1);
print(5 << 1);
print(5 >> 1);
