{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compile and debug current file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/twice/main.go",
            "args": ["${file}", "-o", "${fileBasenameNoExtension}_bin"],
            "console": "integratedTerminal"
        },
        {
            "name": "Compile, run and debug current file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/twice/main.go",
            "args": ["${file}", "-o", "${fileBasenameNoExtension}_bin", "-run"],
            "console": "integratedTerminal"
        }
    ]
}